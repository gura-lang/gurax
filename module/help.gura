#!/usr/bin/env gurax

ComposePropertyHelp(vtype as VType) = {
	str = ''
	str += '# Property\n'
	str
}

ComposeConstructorHelp(vtype as VType) = {
	str = ''
	str += '# Constructor\n'
	str
}

ComposeMethodHelp(vtype as VType) = {
	str = ''
	str += '# Method\n'
	str += '\n'
	vtype.__methods__ {|method|
		doc = method.__help__().doc
		str += '**' + method.__str__():unbracket + '**\n\n'
		str += doc
		str += cond(doc.EndsWith('\n'), '\n', '\n\n')
	}
	str
}
