//------------------------------------------------------------------------------
// BuildRule
//------------------------------------------------------------------------------
BuildRule = struct {
	fileNameTgt:String
	fileNamesSrc[]:String
	func:Function
	Execute() = {
		if (!path.Exists(this.fileNameTgt) || \
			(path.Stat(this.fileNameTgt).mtime < path.Stat(this.fileNamesSrc):*mtime).Or()) {
			this.func()
		} else {
			true
		}
	}
}

//------------------------------------------------------------------------------
// BuilderBase
//------------------------------------------------------------------------------
BuilderBase = class {
}

