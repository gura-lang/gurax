#!/usr/bin/env gurax
import(util.tester) {*}

TestCase('Property') {
	Tester(`Number.__prop__(`abs))
	Tester(`Number.__prop__(`arg))
	Tester(`Number.__prop__(`imag))
	Tester(`Number.__prop__(`norm))
	Tester(`Number.__prop__(`real))
}

TestCase('Property Access') {
	test(a:Number) = {
		Tester(`a)
		Tester(`a.abs)
		Tester(`a.arg)
		Tester(`a.imag)
		Tester(`a.norm)
		Tester(`a.real)
	}
	test(3)
}

TestCase('Operator') {
	Tester(`(~3))
	Tester(`(-3))
	Tester(`(+3))
	Tester(`(3 + 5))
	Tester(`(3 & 5))
	Tester(`(3 <=> 5))
	Tester(`(3 <=> 3))
	Tester(`(5 <=> 3))
	Tester(`(3 / 5))
	Tester(`(3 / 0))
	Tester(`(3 == 5))
	Tester(`(3 == 3))
	Tester(`(5 == 3))
	Tester(`(3 >= 5))
	Tester(`(3 >= 3))
	Tester(`(5 >= 3))
	Tester(`(3 > 5))
	Tester(`(3 > 3))
	Tester(`(5 > 3))
	Tester(`(3 <= 5))
	Tester(`(3 <= 3))
	Tester(`(5 <= 3))
	Tester(`(3 < 5))
	Tester(`(3 < 3))
	Tester(`(5 < 3))
	Tester(`(3 * 5))
	Tester(`(3 - 5))
}
