	R'''
	[Companies]
	${companies.Each {|company|}}
	  ${if (company)}
	    Company: ${company}
	  ${else}
	    Company: (not defined)
	  ${end}
	${end}
	[Products]
	${products.Each {|product|}}
	- ${product}
	${end}
	'''.Embed(sys.cout)
}
