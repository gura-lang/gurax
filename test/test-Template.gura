TestCase('Repeat sequence') {
	companies = ['Gura company', 'Guri corporation', nil]
	products = ['apple', 'grape', 'orange']
	// iteration with for statement
	R'''
	[Companies]
	${for (company in companies)}
	  ${if (company)}
	    Company: ${company}
	  ${else}
	    Company: (not defined)
	  ${end}
	${end}
	[Products]
	${for (product in products)}
	- ${product}
	${end}
	'''.Embed(sys.cout)
