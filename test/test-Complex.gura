#!/usr/bin/env gurax
import(util.tester) {*}

TestCase('Property') {
	Tester(`Complex.__prop__(`abs))
	Tester(`Complex.__prop__(`arg))
	Tester(`Complex.__prop__(`imag))
	Tester(`Complex.__prop__(`norm))
	Tester(`Complex.__prop__(`real))
}

TestCase('Property Access') {
	test(a:Complex) = {
		Tester(`a)
		Tester(`a.abs)
		Tester(`a.arg)
		Tester(`a.imag)
		Tester(`a.norm)
		Tester(`a.real)
	}
	test(3)
	test(3j)
	test(1+1j)
	test(-1+1j)
	test(-1-1j)
	test(1-1j)
}

TestCase('Operator') {
	Tester(`(-(3 + 2j)))
	Tester(`(+(3 + 2j)))
	Tester(`((3 + 2j) + (5 + 4j)))
	Tester(`((3 + 2j) + 5))
	Tester(`(3 + (5 + 4j)))
	Tester(`((3 + 2j) / (5 + 4j)))
	Tester(`((3 + 2j) / 0))
	Tester(`((3 + 2j) == (5 + 4j)))
	Tester(`((3 + 2j) == (3 + 2j)))
	Tester(`((3 + 2j) * (5 + 4j)))
	Tester(`((3 + 2j) * 5))
	Tester(`(3 * (5 + 4j)))
	Tester(`((3 + 2j) != (5 + 4j)))
	Tester(`((3 + 2j) != (3 + 2j)))
	Tester(`((3 + 2j) - (5 + 4j)))
	Tester(`((3 + 2j) - 5))
	Tester(`(3 - (5 + 4j)))
}
