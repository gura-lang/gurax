#!/usr/bin/env gurax
import(util.tester) {*}

TestCase('Constructor') {
	Tester(`Random(0))
	Tester(`Random(0x12345678))
}

TestCase('Random#Rand()') {
	r = Random(0)
	Tester(`Dim(20) {r.Rand(10)})
	Tester(`Dim(20) {r.Rand(100)})
}

TestCase('Random#Uniform()') {
	r = Random(0)
	Tester(`Dim(20) {r.Uniform()})
}

TestCase('Random#Normal()') {
	r = Random(0)
	Tester(`Dim(20) {r.Normal()})
}

TestCase('Random#Reset()') {
	r = Random(1234)
	Tester(`Dim(20) {r.Rand(10)})
	r.Reset()
	Tester(`Dim(20) {r.Rand(10)})
}
