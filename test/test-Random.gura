#!/usr/bin/env gurax
import(util.tester) {*}

TestCase('Constructor') {
	Tester(`Random(0))
	Tester(`Random(0x12345678))
}

TestCase('Random#Int()') {
	r = Random(0)
	Random.seed = 0
	Tester(`Dim(20) {r.Int(10)})
	Tester(`Dim(20) {Random.Int(10)})
	r.Reset()
	Random.Reset()
	Tester(`r.IntM(10, 20):list)
	Tester(`Random.IntM(10, 20):list)
	r.Reset()
	Random.Reset()
	Tester(`Dim(20) {r.Int(100)})
	Tester(`Dim(20) {Random.Int(100)})
	r.Reset()
	Random.Reset()
	Tester(`r.IntM(100, 20):list)
	Tester(`Random.IntM(100, 20):list)
}

TestCase('Random#Float()') {
	r = Random(0)
	Random.seed = 0
	Tester(`Dim(20) {r.Float()})
	Tester(`Dim(20) {Random.Float()})
	r.Reset()
	Random.Reset()
	Tester(`r.FloatM(20):list)
	Tester(`Random.FloatM(20):list)
}

TestCase('Random#Normal()') {
	r = Random(0)
	Random.seed = 0
	Tester(`Dim(20) {r.Normal()})
	Tester(`Dim(20) {Random.Normal()})
	r.Reset()
	Random.Reset()
	Tester(`r.NormalM(cnt = 20):list)
	Tester(`Random.NormalM(cnt = 20):list)
}

TestCase('Random#Reset()') {
	r = Random(1234)
	Tester(`Dim(20) {r.Int(10)})
	r.Reset()
	Tester(`Dim(20) {r.Int(10)})
}
