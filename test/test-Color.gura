TestCase('Color.RGB()') {
	Tester(`Color.RGB(0, 0, 0))
	Tester(`Color.RGB(255, 255, 255))
}

TestCase('Color.RGBA()') {
	Tester(`Color.RGBA(0, 0, 0, 0))
