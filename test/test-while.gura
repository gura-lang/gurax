TestCase('Create list') {
	n = 10
	x = while (n > 0):list {|i| n -= 1 }
	Println(x):nomap
	n = 10
	x = while (n > 0):list { n -= 1 }
	Println(x):nomap
	//x = while (n > 0):list {|i| n -= 1 }
}

TestCase('Scope test') {
	i = 'original I'
	n = 0
	sum = 0
	while (n <= 10) {|i| sum += i, n += 1}
	Println('sum = ', sum)
	Println('i   = ', i)
