#!/usr/bin/env gurax
import(util.tester) {*}

empty = []
words10 = [
	'bubble', 'tasteful', 'yell', 'unarmed', 'vest', 'private', 'cowardly', 'happen', 'demonic', 'entertaining'
]

TestCase('Map to List') {
	Tester(`empty)
	Tester(`empty::len)
	Tester(`empty::Upper())
	Tester(`empty::Left(2))
	Tester(`words10)
	Tester(`words10::len)
	Tester(`words10::Upper())
	Tester(`words10::Left(2))
}

TestCase('Map to Iterator') {
	Tester(`empty)
	Tester(`[empty:*len*])
	Tester(`[empty:*Upper()*])
	Tester(`[empty:*Left(2)*])
	Tester(`words10)
	Tester(`[words10:*len*])
	Tester(`[words10:*Upper()*])
	Tester(`[words10:*Left(2)*])
}

TestCase('Map along') {
	Tester(`words10)
	Tester(`words10:&Left(0..):list)
}

