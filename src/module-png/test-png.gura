import(util.tester) {*}
import(png)

TestCase('Property') {
	PrintProperty(png.Content)
}

TestCase('png.Content') {
	png.Content('test.png') {|c|
		png.Content.__EachPropHandler__ {|prop|
			value = c.__PropGet__(prop.symbol)
			Printf('%-20s .. %d\n', prop.symbol.name, value)
		}
	}
}

