#!/usr/bin/env gurax
//==============================================================================
// test-jpeg.gura
//==============================================================================
import(util.tester) {*}
import(jpeg)

TestCase('Property') {
	PrintProperty(jpeg.Content)
	PrintProperty(jpeg.Exif)
	PrintProperty(jpeg.IFD)
	PrintProperty(jpeg.Segment)
	PrintProperty(jpeg.Tag)
}

TestCase('jpeg.Content#segments') {
	jpeg.Content('test.jpg').segments.Each {|segment|
		Println(segment)
	}
}

TestCase('jpeg.Content#exif') {
	exif = jpeg.Content('test.jpg').exif
	Println(exif.ifd0.tags)
	Println(exif.ifd1.tags)
}
