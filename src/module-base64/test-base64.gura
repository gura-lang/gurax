import(util.tester) {*}

TestEncDec(buffSrc:Binary) = {
	buffEnc = base64.Encode(buffSrc):base32
	//Printf('%s -> %s\n', buffSrc, buffEnc)
	buffDec = base64.Decode(buffEnc):base32
	Printf('Source:  %s\n', buffSrc)
	Printf('Encoded: %s .. %s\n', buffEnc, cond(buffSrc == buffDec, 'OK', '**NG**'))
}

TestCase('Basic test') {
	TestEncDec(b'')
	TestEncDec(b'f')
	TestEncDec(b'fo')
	TestEncDec(b'foo')
	TestEncDec(b'foob')
	TestEncDec(b'fooba')
	TestEncDec(b'foobar')
	TestEncDec(b'abcdefghijklmnopqrstuvwxyz')
}
