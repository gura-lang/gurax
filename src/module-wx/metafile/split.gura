#!/usr/bin/env gurax
import(re)

stat = `start
ReadLines('Misc.gura') {|line|
	if (stat == `start) {
		if (m = line.Match(r'(\w+) = ')) {
			f = Open('VType_wx' + m[1] + '.gura', 'w')
			f.Print(line)
			stat = `extract
		}
	} else {
		f.Print(line)
		if (line.Match(r'^}')) {
			f = nil
			stat = `start
		}
	}
}
