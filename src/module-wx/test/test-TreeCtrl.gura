#!/usr/bin/env gurax
import(wx)

MyApp = class(wx.App) {
	OnInit() = {
		MyFrame(path.BaseName(path.FileName(sys.argv[0])), wx.Point(50, 50), wx.Size(800, 600)).Show()
		true
	}
}

MyFrame = class(wx.Frame) {
	__init__(title as String, pos as wx.Point, size as wx.Size) = {|nil, wx.ID_ANY, title, pos, size|
		PanelTop(this)
	}
}

PanelTop = class(wx.Panel) {
	__init__(parent as wx.Window) = {|parent|
		sizerTop = wx.BoxSizer(wx.HORIZONTAL)
		this.SetSizer(sizerTop)
		ctrl = wx.TreeCtrl(this)
		sizerTop.Add(ctrl, wx.SizerFlags(1).Expand())
		ctrl.AddRoot('root') {|itemId|
			ctrl.AppendItem(itemId, 'child 1')
			ctrl.AppendItem(itemId, 'child 2') {|itemId|
				ctrl.AppendItem(itemId, 'child 2-1')
				ctrl.AppendItem(itemId, 'child 2-2')
				ctrl.AppendItem(itemId, 'child 2-3')
				ctrl.AppendItem(itemId, 'child 2-4')
			}
			ctrl.AppendItem(itemId, 'child 3')
			ctrl.AppendItem(itemId, 'child 4')
			ctrl.AppendItem(itemId, 'child 5') {|itemId|
				ctrl.AppendItem(itemId, 'child 5-1')
				ctrl.AppendItem(itemId, 'child 5-2')
				ctrl.AppendItem(itemId, 'child 5-3')
				ctrl.AppendItem(itemId, 'child 5-4')
			}
			ctrl.AppendItem(itemId, 'child 6')
		}
	}
}

wx.ImplementApp(MyApp())
