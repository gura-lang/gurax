		cairo_move_to (cr, 64.0, 50.0); cairo_line_to (cr, 64.0, 200.0);
		cairo_stroke (cr);
		cairo_set_line_cap  (cr, CAIRO_LINE_CAP_ROUND);
		cairo_move_to (cr, 128.0, 50.0); cairo_line_to (cr, 128.0, 200.0);
		cairo_stroke (cr);
		cairo_set_line_cap  (cr, CAIRO_LINE_CAP_SQUARE);
